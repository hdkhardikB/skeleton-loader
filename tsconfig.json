{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "esModuleInterop": true,
        "jsx": "react",
        "sourceMap": true,
        "noImplicitAny": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "noImplicitThis": true,
        "strictNullChecks": true
    },
    "include": [
        "./src/**/*"
    ],
    "lib": [
        "es6"
    ],
    "exclude": [
        "node_modules",
        "./src/**/*.test.*"
    ]
}
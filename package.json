{
  "name": "evl-ui-components",
  "version": "1.0.3",
  "description": "Everledger UI Component Library",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean-lib": "rimraf lib/* && rimraf assets/*.*",
    "build-lib": "ttsc",
    "postbuild": "yarn run copy-files",
    "build": "npm run clean-lib && npm run build-lib",
    "build-lib-watch": "ttsc -w",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prepare": "npm run build-lib",
    "copy-files": "cp -rv assets/**/*.* assets/"
  },
  "license": "MIT",
  "dependencies": {
    "@material-ui/core": "^4.6.1",
    "@material-ui/icons": "^4.5.1",
    "formik": "^2.1.1"
  },
  "peerDependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-jss": "^10.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@storybook/addon-a11y": "^5.3.4",
    "@storybook/addon-actions": "^5.2.8",
    "@storybook/addon-info": "^5.2.8",
    "@storybook/addon-links": "^5.2.8",
    "@storybook/addons": "^5.2.8",
    "@storybook/react": "^5.2.8",
    "@types/classnames": "^2.2.9",
    "@types/jss": "^10.0.0",
    "@types/node": "^12.12.14",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "@types/react-jss": "^10.0.0",
    "@types/yup": "^0.26.27",
    "babel-loader": "^8.0.6",
    "husky": ">=1",
    "lint-staged": ">=8",
    "prettier": "^1.19.1",
    "react-docgen-typescript-loader": "^3.6.0",
    "rimraf": "^3.0.0",
    "ts-loader": "^6.2.1",
    "ts-transformer-imports": "^0.4.3",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "ttypescript": "^1.5.8",
    "typescript": "^3.7.2",
    "yup": "^0.28.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.ts?(x)": [
      "prettier --write",
      "git add"
    ]
  }
}
